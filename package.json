{
  "name": "nodejs-api",
  "version": "0.1.0",
  "description": "Starter project for an ES6 RESTful Express API",
  "main": "src/main.js",
  "scripts": {
    "lint": "eslint",
    "build": "npm run pretty && babel src -s -D -d dist --presets es2015,stage-0",
    "start": "NODE_PATH=src/ NODE_ENV=development nodemon --inspect src/main.js --exec babel-node --presets es2015",
    "start:prod": "NODE_PATH=src/ NODE_ENV=production nodemon src/main.js --exec babel-node --presets es2015",
    "test": "eslint src",
    "pretty": "prettier --write --tab-width 4 \"src/**/*.js\"",
    "precommit": "lint-staged && npm test"
  },
  "lint-staged": {
    "*.js": [
      "npm run pretty",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "repository": "dolgopolova/node.js_example",
  "author": "Tanya Dolgopolova",
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "babel-eslint": "^4.1.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "compression": "^1.5.2",
    "config": "^3.3.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.9.3",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": ">=4.18.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^1.9.2",
    "prettier": "^1.19.1"
  }
}
